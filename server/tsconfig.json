{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "out",
        "baseUrl": "./",
        "strict": true,
        "incremental": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": false,
        "paths": {
            "@common/*": ["../common/*"],
            "@app/*": ["./app/*"]
        }
    }
}
